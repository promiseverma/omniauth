<%- model_class = Complaint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:subject) %>:</strong></dt>
  <dd><%= @complaint.subject %></dd>
  <dt><strong><%= model_class.human_attribute_name(:matter) %>:</strong></dt>
  <dd><%= @complaint.matter %></dd>
  <dt><strong><%= model_class.human_attribute_name(:key_words) %>:</strong></dt>
  <dd><%= @complaint.key_words %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              complaints_path, "data-no-turbolink" => true, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_complaint_path(@complaint), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              complaint_path(@complaint),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
