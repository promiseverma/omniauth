<%= form_for @complaint, :html => { :class => "form-horizontal complaint" } do |f| %>

  <% if @complaint.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@complaint.errors.count, "error") %> prohibited this complaint from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @complaint.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :subject, :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.text_field :subject, :class => 'form-control' %>
    </div>
    <%=f.error_span(:subject) %>
  </div>
  <div class="form-group">
    <%= f.label :matter, :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.text_field :matter, :class => 'form-control' %>
    </div>
    <%=f.error_span(:matter) %>
  </div>
  <div class="form-group">
    <%= f.label :key_words, :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.text_field :key_words, :class => 'form-control' %>
    </div>
    <%=f.error_span(:key_words) %>
  </div>
  <div class="form-group">
    <%= f.label :tag_list, :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.text_field :tag_list, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tag_list) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                complaints_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
